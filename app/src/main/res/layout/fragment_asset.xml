<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.bdwater.productwater.main.AssetFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_layout" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/searchview_fake_layout"
                    android:id="@+id/search_fake_layout"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorSeparatorLine"
                    android:columnCount="3"
                    android:rowCount="2">

                    <!-- Asset -->
                    <LinearLayout
                        android:id="@+id/deviceBlock"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:gravity="center"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:focusableInTouchMode="false"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-nutrition"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:text="资产" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-nutrition"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资产" />
                    </LinearLayout>

                    <!-- Scan QRCode -->
                    <LinearLayout
                        android:layout_marginTop="1dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-qrcode-scan"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫描二维码" />
                    </LinearLayout>

                    <!-- Trouble -->
                    <LinearLayout
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-credit-card-plus"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问题单" />
                    </LinearLayout>

                    <!-- Service Bill -->
                    <LinearLayout
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-screwdriver"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修单" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_rowWeight="1"
                        android:background="@drawable/asset_layout_clickable"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:clickable="false"
                            android:contentDescription="@null"
                            android:focusableInTouchMode="false"
                            app:ico_color="@color/colorDark"
                            app:ico_icon="cmd-nutrition"
                            app:ico_padding="0dp"
                            app:ico_size="@dimen/card_icon_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫描二维码" />
                    </LinearLayout>
                </GridLayout>

                <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                    android:id="@+id/swipeMenuRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
