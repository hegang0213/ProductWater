<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/refreshLayout"
    tools:context="com.bdwater.productwater.asset.device.DeviceSearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:indeterminate="true" />
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="84dp"
            android:clipToPadding="false"/>
        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"
            app:floatingSearch_leftActionMode="showHome"
            app:floatingSearch_searchBarMarginLeft="@dimen/propertyIndent"
            app:floatingSearch_searchBarMarginRight="@dimen/propertyIndent"
            app:floatingSearch_searchBarMarginTop="@dimen/propertyIndent"
            app:floatingSearch_searchHint="@string/search_hint"
            app:floatingSearch_searchInputTextSize="6dip"
            app:floatingSearch_searchSuggestionTextSize="6dip"
            app:floatingSearch_showSearchKey="true"/>
    </RelativeLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>